{
  "expo": {
    "name": "Todo",
    "slug": "Todo-App",
    "version": "1.0.0",
    "orientation": "portrait",
    "icon": "./assets/images/Logo.png",
    "jsEngine": "jsc",
    "userInterfaceStyle": "light",
    "newArchEnabled": false,
    "splash": {
      "image": "./assets/images/Logo.png",
      "resizeMode": "contain",
      "backgroundColor": "#ffffff"
    },
    "ios": {
      "bundleIdentifier": "com.guy.todo",
      "supportsTablet": false,
      "requireFullScreen": true,
      "buildNumber": "12",
      "infoPlist": {
        "UIDeviceFamily": [
          1
        ],
        "UIRequiresFullScreen": true,
        "NSPhotoLibraryUsageDescription": "נדרש אישור כדי לבחור תמונת פרופיל מהגלריה.",
        "NSPhotoLibraryAddUsageDescription": "נדרש אישור כדי לשמור תמונת פרופיל.",
        "NSCameraUsageDescription": "נדרש אישור כדי לצלם תמונת פרופיל.",
        "ITSAppUsesNonExemptEncryption": false
      }
    },
    "android": {
      "adaptiveIcon": {
        "foregroundImage": "./assets/adaptive-icon.png",
        "backgroundColor": "#ffffff"
      },
      "edgeToEdgeEnabled": true
    },
    "platforms": ["ios", "android"],
    "plugins": [
      "@react-native-community/datetimepicker"
    ],
    "extra": {
      "eas": {
        "projectId": "b65858d8-1fe7-4e1d-8be1-2de3c77652fd"
      }
    }
  }
}
